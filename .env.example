# Job Application Automation Tool - Environment Configuration
# Copy this file to .env and customize the values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False

# Database Configuration
DATABASE_PATH=job_automation.db

# Email Configuration (for notifications)
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@jobautomation.com

# API Keys (optional)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Application Settings
MAX_APPLICATIONS_PER_DAY=20
MAX_APPLICATIONS_PER_SESSION=5
APPLICATION_DELAY=30

# Selenium Configuration
SELENIUM_HEADLESS=True
SELENIUM_WINDOW_WIDTH=1920
SELENIUM_WINDOW_HEIGHT=1080

# Job Portal Configuration
LINKEDIN_ENABLED=True
NAUKRI_ENABLED=True
INDEED_ENABLED=True
WELLFOUND_ENABLED=True
REMOTEOK_ENABLED=True

# Security Settings
ENABLE_CSRF_PROTECTION=True
SESSION_TIMEOUT=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=job_automation.log

# Development Settings
FLASK_ENV=production
FLASK_DEBUG=False